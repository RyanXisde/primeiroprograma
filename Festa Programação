// Online C compiler to run C program online
#include <stdio.h>


int main() {
       int idade;
       printf("Digite sua idade:");
       scanf("%d", &idade);
       if(idade >= 18) {
           printf("\nIsso é uma festa, divirta-se!");
       }else if(idade >=12){
           printf("\nVá beber uma fanta uva na barraquinha!");
       }else if(idade < 12){
               printf("\nVá pedir para sua mãe te fazer um sanduiche.");
       }
       
    printf("\nE depois vá para casa dormir!");
     printf("\nAfinal de contas, sua idade é de %d anos.", idade);
    return 0;
}
